{% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
{{ form_start(form) }}
    <table class="table ">
        <tr>
            <th>ISBN</th>
            <td>
                {{ form_row(form.isbn) }}
            </td>
        </tr>
        <tr>
            <th>Titre</th>
            <td>
                {{ form_row(form.titre) }}
            </td>
        </tr>
        <tr>
            <th>Nombre de Pages</th>
            <td>
                {{ form_row(form.nombre_pages) }}
            </td>
        </tr>
        <tr>
            <th>Date de creation</th>
            <td>
                {{ form_row(form.date_de_parution) }}
            </td>
        </tr>
        <tr>
            <th>Note du livre</th>
            <td>
                {{ form_row(form.note) }}
            </td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>
                {{ form_row(form.Genres) }}
            </td>
        </tr>
        <tr>
            <th>Author</th>
            <td>
                {{ form_row(form.Auteurs) }}
            </td>
        </tr>
    </table>
     <button class='btn btn-primary'>{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
   

{% endif %}