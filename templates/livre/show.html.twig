{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <div style="text-align:center">
    <h1 style="background-color:black;color:white;">Livre</h1>
  </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Nombre_pages</th>
                <td>{{ livre.nombrePages }}</td>
            </tr>
            <tr>
                <th>Date_de_parution</th>
                <td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ livre.note }}</td>
            </tr>
        </tbody>
    </table>

    <a class = 'btn btn-secondary' href="{{ path('livre_index') }}">back to list</a>
    {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}

    <a class = 'btn btn-primary' href="{{ path('livre_edit', {'id': livre.id}) }}">edit</a>
     {% endif %}
 {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
 {{ include('livre/_delete_form.html.twig') }}
 {% endif %}
{% endblock %}
