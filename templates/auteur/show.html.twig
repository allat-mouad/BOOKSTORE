{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <div style="text-align:center">
    <h1 style="background-color:grey;color:white;">Auteur</h1>
  </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom_prenom</th>
                <td>{{ auteur.nomPrenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ auteur.sexe }}</td>
            </tr>
            <tr>
                <th>Date_de_naissance</th>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationalite</th>
                <td>{{ auteur.nationalite }}</td>
            </tr>
        </tbody>
    </table>

    <a class = 'btn btn-secondary'  href="{{ path('auteur_index') }}">back to list</a>
    {% if app.user and app.user.roles[0]=="ROLE_ADMIN"  %}
    <a class = 'btn btn-primary'  href="{{ path('auteur_edit', {'id': auteur.id}) }}">edit</a>
    

    {{ include('auteur/_delete_form.html.twig') }}
     {% endif %}  
{% endblock %}
