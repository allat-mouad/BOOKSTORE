{% extends 'base.html.twig' %}


{% block head %}

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.9.4/css/uikit.min.css" integrity="sha512-Je1wwJz37N237FpJ3eJXkzVW2ek9331ygz5JdzfbmkmbMIObSC7K3UelTVpcVNRgzJRxoh40NhRDqNNuMfEVuA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    {% block title %}Home{% endblock %}
 {% block stylesheets %}
            <link href="{{ asset('css/styles.css') }}"/>
        {% endblock %}




{% endblock %}

    
{% block body %}  

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">BOOKSTORE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('auteur_index') }}">Auteurs</a>
                </li>
                 <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('livre_index') }}">Livres</a>
                </li>
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="{{ path('livre_index') }}" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Genres
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {% for genre in genres %}
                        <li><a class="dropdown-item" href="{{ path('genre_show', {'id': genre.id}) }}">{{ genre.nom }}</a></li>
                    {%else%}
                        <li>Pas de genres</li>
                    {% endfor %}
                </ul>
                </li>
                {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_register') }}">Register</a>
                </li>
                {%else%}
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="{{ path('app_logout') }}">logout</a>
                </li>
                {% endif %}
            </ul>
            </div>
        </div>
    </nav>
   
    <div
  class="bg-image d-flex justify-content-center align-items-center"
  style="
    background-image: url('https://mdbcdn.b-cdn.net/img/new/fluid/nature/015.webp');
    height: 100vh;
  "
>
  <h1>BOOKS FOR EVERY ONE</h1>
  <div class="row">
    <div class="col-1-of-2">
                <div class="composition">

     <a href="#cours"> <img  class="composition__photo composition__photo--p1" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRHxG94GriGy7XUjtU1kNwh-mTqakdiGC4JVw&usqp=CAU">
     </a>

                   <a href="#cours"> <img  class="composition__photo composition__photo--p2" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcShsbfpIDzmiBcmmuXnTv3vLb2uXXRx1Vq9qA&usqp=CAU" ></a>

                   <a href="#cours"><img  class="composition__photo composition__photo--p3" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSuM2JWsFVMEyybs7qPjg7i6mhQ0iAuZTQiCg&usqp=CAU"></a> 

                </div>
            </div>
            
            </div>
                            <h1>AVAILABLE AT ALL TIMES</h1>

</div>
    <div>
     <ul class="uk-list uk-list-striped">
             <h2>Livres</h2>
        </ul>
        <ul class="uk-list uk-list-striped">
            {% for livre in livres %}
                <li><a href="{{ path('livre_show', {'id': livre.id}) }}">{{ livre.titre }}</a></li>
            {%  endfor %}
        </ul>
        <ul class="pagination justify-content-center" >
            {% for i in 1..((totalLivre/5) | round(1, 'ceil')) %}
                <li class="page-item"><a class="page-link" href="{{ path("home",{pageLivre : i}) }}">{{i}}</a></li>
            {% endfor %}
        </ul>
    </div>
     <style>
     h1{
         color:white;
     }
   
  
  .row{
     display: flex;
  justify-content: center;
  align-items: center;

  }
  .row::after { 
      content: "";
      clear: both
  }
  
  .row [class^="col-"] {
      float: left
  }
  
  .row [class^="col-"]:not(:last-child) {
      margin-right: 20rem
  }
  

  .row .col-1-of-2 {
      width: calc((100% - 6rem) / 2)
  }
   .composition {
       
  position: relative;
 }

 .composition__photo {
    width: 50%;
    -webkit-box-shadow: 0 1.5rem 4rem rgba(0, 0, 0, 0.4);
    box-shadow: 0 1.5rem 4rem rgba(0, 0, 0, 0.4);
    border-radius: 2px;
    z-index: 10;
    -webkit-transition: all .2s;
    transition: all .2s;
    outline-offset: 2rem; /* pour l'effet bordure */
}


.composition__photo:hover {
    outline: 1.5rem solid #C0B283;
    -webkit-transform: scale(1.05) translateY(-0.5rem);
    transform: scale(1.05) translateY(-0.5rem);
    -webkit-box-shadow: 0 2.5rem 4rem rgba(0, 0, 0, 0.5);
    box-shadow: 0 2.5rem 4rem rgba(0, 0, 0, 0.5);
    z-index: 30
}

.composition:hover .composition__photo:not(:hover) {
    -webkit-transform: scale(0.95);
    transform: scale(0.95)
}
    </style>

{% endblock %}    


